with "aunit";
with "../../xreq_lib.gpr";
with "../../xreq_generator.gpr";

project Unit_Tests extends "../../settings.gpr" is

   for Languages   use ("Ada");
   for Main        use ("test_main.adb");
   for Source_Dirs use ("src");
   for Object_Dir  use "obj";
   for Exec_Dir    use "bin";

   package Builder extends Settings.Builder is
      case Settings.Target is
      	 when "native" => for Executable ("test_main.adb") use "unit_tests";
         when "arm-eabi" => for Executable ("test_main.adb") use "unit_tests.elf";
      end case;
   end Builder;

end Unit_Tests;
