	 "../../tank/src/devices",
	 "../../tank/src/regul",
	 "../../tank/src/app",
	 "../../tank_simul/src/devices",
	 "../../tank_simul/src/simul",
         "../../tank_simul/ios",
         "../src",
         "../main"
